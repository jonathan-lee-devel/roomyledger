{
  "name": "rl-microservices",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "concurrently -c \"cyan.bold,blue.bold\" yarn:build:*",
    "build:rl-micro-api-gateway": "nest build rl-micro-api-gateway",
    "build:rl-micro-payments": "nest build rl-micro-payments",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "concurrently -c \"cyan.bold,blue.bold\" yarn:start:dev:*",
    "start:dev:rl-micro-api-gateway": "nest start --watch rl-micro-api-gateway",
    "start:dev:rl-micro-payments": "nest start --watch rl-micro-payments",
    "start:debug": "nest start --debug --watch",
    "start:prod:rl-micro-api-gateway": "node dist/apps/rl-micro-api-gateway/main",
    "start:prod:rl-micro-payments": "node dist/apps/rl-micro-payments/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/rl-micro-api-gateway/test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.3",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.4",
    "@nestjs/platform-express": "^10.0.0",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ts-proto": "^2.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@rl-validation/validation(|/.*)$": "<rootDir>/libs/validation/src/$1",
      "^@rl-auth/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@rl-supabase/supabase(|/.*)$": "<rootDir>/libs/supabase/src/$1",
      "^@rl-email/email(|/.*)$": "<rootDir>/libs/email/src/$1",
      "^@rl-util/util(|/.*)$": "<rootDir>/libs/util/src/$1",
      "^@rl-prisma/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@rl-config/config(|/.*)$": "<rootDir>/libs/config/src/$1"
    }
  }
}
