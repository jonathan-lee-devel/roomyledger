---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Guides</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/guides/creating-a-property-ledger">Creating a Property Ledger</a>
        </li>
      </ul>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Blog (Technical Documentation)</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/tech-blog/intro">Intro</a>
        </li>
      </ul>
    </li>
    <li class="menu-item">
      <a href="https://www.roomyledger.com" title="Main Site" rel="noopener noreferrer">Main Site</a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        height: auto;
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
